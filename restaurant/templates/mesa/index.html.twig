{% extends 'base.html.twig' %}

{% block title %}Mantenimiento Mesa{% endblock %}

{% block body %}
    <h1>Mesas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Asientos</th>
                <th>Nombre</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for mesa in mesas %}
            <tr>
                <td>{{ mesa.id }}</td>
                <td>{{ mesa.asientos }}</td>
                <td>{{ mesa.nombre }}</td>
                <td>
                    <a href="{{ path('mesa_show', {'id': mesa.id}) }}">mostrar</a>
                    <a href="{{ path('mesa_edit', {'id': mesa.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mesa_new') }}">Crear nuevo</a>
{% endblock %}
